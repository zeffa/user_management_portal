<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/eight_size"
    android:background="@color/gray"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView android:id="@+id/lbl_first_name"
        android:layout_width="@dimen/zero_size"
        android:layout_height="wrap_content"
        android:text="First Name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText android:id="@+id/edt_first_name"
        android:layout_width="@dimen/zero_size"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:imeOptions="actionNext"
        android:layout_marginTop="@dimen/four_size"
        app:layout_constraintRight_toRightOf="@+id/lbl_first_name"
        app:layout_constraintLeft_toLeftOf="@+id/lbl_first_name"
        app:layout_constraintTop_toBottomOf="@+id/lbl_first_name"
        android:background="@drawable/edit_text_background_custom"/>

    <TextView android:id="@+id/lbl_last_name"
        android:layout_width="@dimen/zero_size"
        android:layout_height="wrap_content"
        android:text="Last Name"
        android:layout_marginTop="@dimen/eight_size"
        app:layout_constraintRight_toRightOf="@+id/edt_first_name"
        app:layout_constraintTop_toBottomOf="@+id/edt_first_name"
        app:layout_constraintLeft_toLeftOf="@+id/edt_first_name"/>

    <EditText android:id="@+id/edt_last_name"
        android:layout_width="@dimen/zero_size"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:imeOptions="actionNext"
        android:layout_marginTop="@dimen/four_size"
        app:layout_constraintRight_toRightOf="@+id/lbl_first_name"
        app:layout_constraintLeft_toLeftOf="@+id/lbl_first_name"
        app:layout_constraintTop_toBottomOf="@+id/lbl_last_name"
        android:background="@drawable/edit_text_background_custom"/>

    <TextView android:id="@+id/lbl_job"
        android:layout_width="@dimen/zero_size"
        android:layout_height="wrap_content"
        android:text="Your Job"
        android:layout_marginTop="@dimen/eight_size"
        app:layout_constraintRight_toRightOf="@+id/edt_first_name"
        app:layout_constraintTop_toBottomOf="@+id/edt_last_name"
        app:layout_constraintLeft_toLeftOf="@+id/edt_first_name"/>

    <EditText android:id="@+id/edt_job"
        android:layout_width="@dimen/zero_size"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:imeOptions="actionDone"
        android:layout_marginTop="@dimen/four_size"
        app:layout_constraintRight_toRightOf="@+id/lbl_first_name"
        app:layout_constraintLeft_toLeftOf="@+id/lbl_first_name"
        app:layout_constraintTop_toBottomOf="@+id/lbl_job"
        android:background="@drawable/edit_text_background_custom"/>

    <Button android:id="@+id/btn_update_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="@dimen/eight_size"
        app:layout_constraintRight_toRightOf="@+id/edt_job"
        app:layout_constraintTop_toBottomOf="@+id/edt_job"
        android:background="@drawable/button_background_custom"/>

    <Button android:id="@+id/btn_cancel_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_marginEnd="@dimen/four_size"
        android:layout_marginRight="@dimen/four_size"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="@dimen/eight_size"
        app:layout_constraintRight_toLeftOf="@+id/btn_update_user"
        app:layout_constraintTop_toBottomOf="@+id/edt_job"
        android:background="@drawable/button_background_custom"/>
</android.support.constraint.ConstraintLayout>