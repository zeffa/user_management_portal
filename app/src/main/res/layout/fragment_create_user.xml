<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:padding="@dimen/twenty_four_size"
    tools:context=".pages.CreateUserFragment">

    <TextView android:id="@+id/lbl_create_user"
        android:layout_width="@dimen/zero_size"
        android:layout_height="wrap_content"
        android:text="Create User"
        android:gravity="center"
        android:layout_marginTop="@dimen/twenty_four_size"
        android:textSize="@dimen/twenty_four_size"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView android:id="@+id/lbl_person_name"
        android:layout_width="@dimen/zero_size"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_marginTop="@dimen/twenty_four_size"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_create_user"/>

    <EditText android:id="@+id/edt_person_name"
        android:layout_width="@dimen/zero_size"
        android:layout_height="wrap_content"
        android:padding="@dimen/eight_size"
        android:inputType="textPersonName"
        android:imeOptions="actionNext"
        android:layout_marginTop="@dimen/four_size"
        app:layout_constraintRight_toRightOf="@+id/lbl_person_name"
        app:layout_constraintLeft_toLeftOf="@+id/lbl_person_name"
        app:layout_constraintTop_toBottomOf="@+id/lbl_person_name"
        android:background="@drawable/edit_text_background_custom"/>

    <TextView android:id="@+id/lbl_job"
        android:layout_width="@dimen/zero_size"
        android:layout_height="wrap_content"
        android:text="Job"
        android:layout_marginTop="@dimen/eight_size"
        app:layout_constraintRight_toRightOf="@+id/lbl_person_name"
        app:layout_constraintLeft_toLeftOf="@+id/lbl_person_name"
        app:layout_constraintTop_toBottomOf="@+id/edt_person_name"/>

    <EditText android:id="@+id/edt_job"
        android:layout_width="@dimen/zero_size"
        android:layout_height="wrap_content"
        android:padding="@dimen/eight_size"
        android:imeOptions="actionDone"
        android:inputType="textPersonName"
        android:layout_marginTop="@dimen/four_size"
        app:layout_constraintRight_toRightOf="@+id/lbl_person_name"
        app:layout_constraintLeft_toLeftOf="@+id/lbl_person_name"
        app:layout_constraintTop_toBottomOf="@+id/lbl_job"
        android:background="@drawable/edit_text_background_custom"/>

    <Button android:id="@+id/btn_create_user"
        android:layout_width="@dimen/zero_size"
        android:layout_height="wrap_content"
        android:text="Create"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="@dimen/eight_size"
        app:layout_constraintRight_toRightOf="@+id/edt_job"
        app:layout_constraintLeft_toLeftOf="@+id/edt_job"
        app:layout_constraintTop_toBottomOf="@+id/edt_job"
        android:background="@drawable/button_background_custom"/>

</android.support.constraint.ConstraintLayout>