<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    grid:alignmentMode="alignBounds"
    grid:columnCount="3"
    grid:rowCount="2"
    android:layout_gravity="center"
    android:padding="@dimen/four_size"
    tools:context=".pages.LandingFragment"
    android:id="@+id/page_grid">

    <android.support.v7.widget.CardView
        android:id="@+id/card_all_users"
        android:layout_height="80dp"
        grid:layout_gravity="fill"
        grid:layout_rowWeight="1"
        grid:layout_columnWeight="1"
        grid:layout_row="0"
        grid:layout_column="0"
        android:layout_marginEnd="@dimen/two_size"
        android:layout_marginRight="@dimen/two_size">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView android:id="@+id/img_all_users"
                android:layout_height="match_parent"
                android:layout_width="@dimen/zero_size"
                grid:layout_row="0"
                grid:layout_column="0"
                grid:layout_constraintRight_toRightOf="parent"
                grid:layout_constraintLeft_toLeftOf="parent"
                grid:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_group_black_36dp"/>

            <TextView
                android:layout_width="@dimen/zero_size"
                android:layout_height="wrap_content"
                grid:layout_gravity="bottom|center"
                android:text="Users"
                grid:layout_row="0"
                grid:layout_column="0"
                android:gravity="center"
                android:background="@color/gray"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                grid:layout_constraintRight_toRightOf="@+id/img_all_users"
                grid:layout_constraintLeft_toLeftOf="@+id/img_all_users"
                grid:layout_constraintBottom_toBottomOf="@+id/img_all_users"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView android:id="@+id/card_new_user"
        android:layout_height="80dp"
        grid:layout_gravity="fill"
        grid:layout_rowWeight="1"
        grid:layout_columnWeight="1"
        grid:layout_row="0"
        grid:layout_column="1"
        android:layout_marginEnd="@dimen/two_size"
        android:layout_marginRight="@dimen/two_size">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView android:id="@+id/img_new_user"
                android:layout_height="match_parent"
                android:layout_width="@dimen/zero_size"
                grid:layout_constraintRight_toRightOf="parent"
                grid:layout_constraintLeft_toLeftOf="parent"
                grid:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_person_add_black_36dp"/>

            <TextView
                android:layout_width="@dimen/zero_size"
                android:layout_height="wrap_content"
                grid:layout_gravity="bottom|center"
                android:text="New User"
                android:gravity="center"
                android:background="@color/gray"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                grid:layout_constraintRight_toRightOf="@+id/img_new_user"
                grid:layout_constraintLeft_toLeftOf="@+id/img_new_user"
                grid:layout_constraintBottom_toBottomOf="@+id/img_new_user"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView android:id="@+id/card_profile"
        android:layout_height="@dimen/forty_eight_size"
        grid:layout_gravity="fill"
        grid:layout_rowWeight="1"
        grid:layout_columnWeight="1"
        grid:layout_row="0"
        grid:layout_column="2">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView android:id="@+id/img_profile"
                android:layout_width="@dimen/zero_size"
                android:layout_height="match_parent"
                grid:layout_constraintRight_toRightOf="parent"
                grid:layout_constraintLeft_toLeftOf="parent"
                grid:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_person_black_36dp"/>
            <TextView
                android:layout_width="@dimen/zero_size"
                android:layout_height="wrap_content"
                grid:layout_gravity="bottom|center"
                android:text="Profile"
                android:gravity="center"
                android:background="@color/gray"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                grid:layout_constraintRight_toRightOf="@+id/img_profile"
                grid:layout_constraintLeft_toLeftOf="@+id/img_profile"
                grid:layout_constraintBottom_toBottomOf="@+id/img_profile"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</android.support.v7.widget.GridLayout>