<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/eight_size"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView android:id="@+id/img_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/eight_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_person_black_36dp"/>

    <TextView android:id="@+id/txt_person_name"
        android:layout_width="@dimen/zero_size"
        android:layout_height="wrap_content"
        android:text="Elijah Onduso"
        android:layout_marginStart="@dimen/eight_size"
        android:layout_marginLeft="@dimen/eight_size"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/img_avatar"
        app:layout_constraintTop_toTopOf="@+id/img_avatar"
        app:layout_constraintLeft_toRightOf="@+id/img_avatar"/>

    <ImageView android:id="@+id/icon_user_edit"
        android:layout_width="@dimen/thirty_two_size"
        android:layout_height="@dimen/thirty_two_size"
        android:padding="@dimen/eight_size"
        android:layout_marginRight="@dimen/eight_size"
        android:layout_marginEnd="@dimen/eight_size"
        app:layout_constraintRight_toLeftOf="@+id/icon_user_delete"
        app:layout_constraintBottom_toBottomOf="@+id/img_avatar"
        app:layout_constraintTop_toTopOf="@+id/img_avatar"
        android:background="@drawable/round_view"
        android:src="@drawable/ic_mode_edit_black_24dp"/>

    <ImageView android:id="@+id/icon_user_delete"
        android:layout_width="@dimen/thirty_two_size"
        android:layout_height="@dimen/thirty_two_size"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="@dimen/eight_size"
        app:layout_constraintBottom_toBottomOf="@+id/img_avatar"
        app:layout_constraintTop_toTopOf="@+id/img_avatar"
        android:background="@drawable/round_view"
        android:src="@drawable/ic_delete_forever_black_24dp"/>
</android.support.constraint.ConstraintLayout>